---
import BaseLayout from "../../layouts/BaseLayout.astro";
import NavBar from "../../components/NavBar.astro";
import "../../styles/global.css";
import "./index.css";

// console.log(posts)
---

<BaseLayout title="K:\\my-work">
    <div class="hidden" id="center-div">
        <NavBar headertext="# My Work" />
        <p class="writing">
            Here you'll find all the projects and work I've done throughout the years
        </p>
        <hr>
        <div class="project-card">
            <img style="order: 2" src="/my-work/icefall.jpg" alt="">
            <div style="order: 1" class="project-context">
                <div style="margin-top: 5px; margin-bottom: 5px;" class="project-desc">
                    <div class="project-header">
                        <h2>ICEFALL</h2>
                    </div>
                    <p>
                        Abandoned within the snow.. <br>
                        Sent to your death, not expected to return.. <br>
                        <br>
                        This project was heavily inspired by isle, be sure to check it out! 
                    </p>

                    <div class="project-links">
                        | <a href="https://github.com/" target="_blank">View</a> / <a href="https://github.com/" target="_blank">Source</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</BaseLayout>